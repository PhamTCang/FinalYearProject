<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CusFoodPanel.BottomNav_CusFoodPanel">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_container_cus"
        android:layout_above="@+id/cus_bottom_nav"
        />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/cus_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn3"
        android:backgroundTint="@color/blue"
        app:itemIconTint="@color/onselected_icon_color"
        app:itemTextColor="@color/onselected_icon_color"
        app:menu="@menu/botnav_customer" />

</RelativeLayout>